<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Estadísticas - Panel Admin</title>
    <link rel="stylesheet" href="/css/landing.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .stats-section {
            margin-bottom: 40px;
            border-bottom: 1px solid #eee;
            padding-bottom: 30px;
        }
        .stats-section:last-child {
            border-bottom: none;
        }
        .section-title {
            margin-bottom: 20px;
            color: #333;
            font-size: 1.5rem;
        }
        .tab-buttons {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }
        .tab-button {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            background: #f0f0f0;
        }
        .tab-button.active {
            background: #3b82f6;
            color: white;
        }
        .tab-content {
            display: none;
        }
        .tab-content.active {
            display: block;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="admin-container">
        <div class="admin-header">
            <h1><i class="fas fa-chart-bar"></i> Gestión de Estadísticas</h1>
            <p>Edita las estadísticas que se muestran en diferentes secciones del sitio</p>
        </div>
        
        <div class="tab-buttons">
            <button class="tab-button" onclick="openTab('landing')">Página Principal</button>
            <button class="tab-button" onclick="openTab('trader-call')">Trader Call</button>
            <button class="tab-button" onclick="openTab('smart-money')">Smart Money</button>
        </div>
        
        <!-- Estadísticas de la Página Principal -->
        <div id="landing-tab" class="tab-content">
            <div class="stats-section">
                <h2 class="section-title">Estadísticas de la Página Principal</h2>
                
                <div class="stats-preview">
                    <h3>Vista previa</h3>
                    <% if (landingStats && landingStats.length > 0) { %>
                        <div class="stats-row">
                            <% landingStats.forEach(stat => { %>
                                <div class="stat-card preview <%= !stat.visible ? 'hidden-stat' : '' %>">
                                    <h2 class="stat-number"><%= stat.value %></h2>
                                    <p class="stat-text"><%= stat.text %></p>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p>No hay estadísticas disponibles para la página principal.</p>
                    <% } %>
                </div>
                
                <% if (landingStats && landingStats.length > 0) { %>
                    <div class="admin-form-container">
                        <% landingStats.forEach(stat => { %>
                            <form action="/admin/stats/update" method="POST" class="admin-form">
                                <input type="hidden" name="id" value="<%= stat._id %>">
                                <input type="hidden" name="category" value="landing">
                                
                                <div class="form-group">
                                    <label for="value-<%= stat._id %>">Valor:</label>
                                    <input type="text" id="value-<%= stat._id %>" name="value" value="<%= stat.value %>" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="text-<%= stat._id %>">Texto:</label>
                                    <input type="text" id="text-<%= stat._id %>" name="text" value="<%= stat.text %>" required>
                                </div>
                                
                                <div class="form-group visibility-toggle">
                                    <label class="toggle-label">
                                        <input type="checkbox" name="visible" <%= stat.visible ? 'checked' : '' %>>
                                        <span class="toggle-text">Visible en la página principal</span>
                                    </label>
                                </div>
                                
                                <button type="submit" class="admin-button">
                                    <i class="fas fa-save"></i> Actualizar
                                </button>
                            </form>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
        
        <!-- Estadísticas de Trader Call -->
        <div id="trader-call-tab" class="tab-content">
            <div class="stats-section">
                <h2 class="section-title">Estadísticas de Trader Call</h2>
                
                <div class="stats-preview">
                    <h3>Vista previa</h3>
                    <% if (traderCallStats && traderCallStats.length > 0) { %>
                        <div class="stats-row">
                            <% traderCallStats.forEach(stat => { %>
                                <div class="stat-card preview <%= !stat.visible ? 'hidden-stat' : '' %>">
                                    <h2 class="stat-number"><%= stat.value %></h2>
                                    <p class="stat-text"><%= stat.text %></p>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p>No hay estadísticas disponibles para Trader Call.</p>
                    <% } %>
                </div>
                
                <% if (traderCallStats && traderCallStats.length > 0) { %>
                    <div class="admin-form-container">
                        <% traderCallStats.forEach(stat => { %>
                            <form action="/admin/stats/update" method="POST" class="admin-form">
                                <input type="hidden" name="id" value="<%= stat._id %>">
                                <input type="hidden" name="category" value="trader-call">
                                
                                <div class="form-group">
                                    <label for="value-<%= stat._id %>">Valor:</label>
                                    <input type="text" id="value-<%= stat._id %>" name="value" value="<%= stat.value %>" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="text-<%= stat._id %>">Texto:</label>
                                    <input type="text" id="text-<%= stat._id %>" name="text" value="<%= stat.text %>" required>
                                </div>
                                
                                <div class="form-group visibility-toggle">
                                    <label class="toggle-label">
                                        <input type="checkbox" name="visible" <%= stat.visible ? 'checked' : '' %>>
                                        <span class="toggle-text">Visible en la página de Trader Call</span>
                                    </label>
                                </div>
                                
                                <button type="submit" class="admin-button">
                                    <i class="fas fa-save"></i> Actualizar
                                </button>
                            </form>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
        
        <!-- Estadísticas de Smart Money -->
        <div id="smart-money-tab" class="tab-content">
            <div class="stats-section">
                <h2 class="section-title">Estadísticas de Smart Money</h2>
                
                <div class="stats-preview">
                    <h3>Vista previa</h3>
                    <% if (smartMoneyStats && smartMoneyStats.length > 0) { %>
                        <div class="stats-row">
                            <% smartMoneyStats.forEach(stat => { %>
                                <div class="stat-card preview <%= !stat.visible ? 'hidden-stat' : '' %>">
                                    <h2 class="stat-number"><%= stat.value %></h2>
                                    <p class="stat-text"><%= stat.text %></p>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p>No hay estadísticas disponibles para Smart Money.</p>
                    <% } %>
                </div>

                <div class="stats-actions">
                    <button class="add-stat-btn" onclick="addSmartMoneyStat()">
                        <i class="fas fa-plus"></i> Agregar Nueva Estadística
                    </button>
                </div>

                <div class="stats-list">
                    <% if (smartMoneyStats && smartMoneyStats.length > 0) { %>
                        <% smartMoneyStats.forEach(stat => { %>
                            <div class="stat-item">
                                <div class="stat-info">
                                    <span class="stat-value"><%= stat.value %></span>
                                    <span class="stat-text"><%= stat.text %></span>
                                </div>
                                <div class="stat-actions">
                                    <button onclick="editSmartMoneyStat('<%= stat._id %>')">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button onclick="toggleSmartMoneyStatVisibility('<%= stat._id %>', <%= stat.visible %>)">
                                        <i class="fas fa-<%= stat.visible ? 'eye' : 'eye-slash' %>"></i>
                                    </button>
                                    <button onclick="deleteSmartMoneyStat('<%= stat._id %>')" class="delete-btn">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="admin-actions">
            <a href="/admin" class="admin-button secondary">
                <i class="fas fa-arrow-left"></i> Volver al Panel
            </a>
        </div>
    </div>
    
    <script>
        function openTab(tabName) {
            // Ocultar todos los contenidos de las pestañas
            const tabContents = document.getElementsByClassName('tab-content');
            for (let content of tabContents) {
                content.style.display = 'none';
            }

            // Desactivar todos los botones
            const tabButtons = document.getElementsByClassName('tab-button');
            for (let button of tabButtons) {
                button.classList.remove('active');
            }

            // Mostrar el contenido seleccionado y activar el botón
            document.getElementById(`${tabName}-tab`).style.display = 'block';
            document.querySelector(`[onclick="openTab('${tabName}')"]`).classList.add('active');
        }

        // Mostrar la primera pestaña por defecto
        document.addEventListener('DOMContentLoaded', function() {
            openTab('landing');
        });
    </script>
    <script src="/js/admin.js"></script>
</body>
</html> 