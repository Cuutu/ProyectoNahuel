<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trader Call - Alertas de Trading - Nahuel Lozano</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/landing.css">
    <link rel="stylesheet" href="/css/alerts.css">
    <link rel="stylesheet" href="/css/alert-detail.css">
    <link rel="stylesheet" href="/css/animations.css">
</head>
<body>
    <%- include('../partials/header') %>

    <!-- Hero Section -->
    <section class="alert-hero">
        <div class="container">
            <h1 data-animate="fade-down">Trader Call</h1>
            <p class="alert-description" data-animate="fade-up" data-delay="200">
                Señales de trading en tiempo real con alta precisión
            </p>
        </div>
    </section>

    <!-- 1. Video explicativo a pantalla completa con reproducción automática -->
    <section class="video-section full-width">
        <div class="video-container fullscreen" data-animate="fade-up">
            <!-- Video a pantalla completa con reproducción automática -->
            <iframe width="100%" height="600" src="https://www.youtube.com/embed/VIDEO_ID?autoplay=1&mute=1&loop=1&playlist=VIDEO_ID" title="Trader Call - Explicación del servicio" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    </section>

    <!-- 2. Números con datos actualizables -->
    <section class="stats-section">
        <div class="container">
            <h2 class="section-title" data-animate="fade-up">Resultados que Hablan por Sí Mismos</h2>
            <div class="stats-grid" data-animate="fade-up">
                <div class="stat-card">
                    <div class="stat-number">85%</div>
                    <div class="stat-label">% de rendimiento del último año</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">+500</div>
                    <div class="stat-label">Usuarios activos</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">+1300</div>
                    <div class="stat-label">Alertas enviadas</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Soporte disponible</div>
                </div>
            </div>
        </div>
    </section>

    <!-- 3. Alertas Históricas (Google Sheets) -->
    <section class="historical-alerts-section">
        <div class="container">
            <h2 class="section-title" data-animate="fade-up">Alertas Históricas</h2>
            <div class="google-sheets-container" data-animate="fade-up" data-delay="200">
                <iframe width="100%" height="500" src="https://docs.google.com/spreadsheets/d/e/1EbHgs9aiN9W6s40NTGkkk_MJodehqA8-A8vF258AEKM/pubhtml?widget=true&amp;headers=false"></iframe>
                <div class="download-button-container">
                    <a href="/downloads/alertas-historicas.pdf" class="download-button">
                        <i class="fas fa-download"></i> Descargar PDF de alertas
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- 4. Carrusel de imágenes con informes y alertas -->
    <section class="reports-carousel-section">
        <div class="container">
            <h2 class="section-title" data-animate="fade-up">Ejemplos de Alertas</h2>
            <div class="carousel-container" data-animate="fade-up" data-delay="200">
                <div class="carousel-track">
                    <div class="carousel-slide">
                        <img src="/img/alerts/ejemplo-alerta-1.jpg" alt="Ejemplo de alerta 1" class="carousel-image">
                        <div class="carousel-caption">Alerta de compra AAPL</div>
                    </div>
                    <div class="carousel-slide">
                        <img src="/img/alerts/ejemplo-alerta-2.jpg" alt="Ejemplo de alerta 2" class="carousel-image">
                        <div class="carousel-caption">Informe diario de mercado</div>
                    </div>
                    <div class="carousel-slide">
                        <img src="/img/alerts/ejemplo-alerta-3.jpg" alt="Ejemplo de alerta 3" class="carousel-image">
                        <div class="carousel-caption">Alerta de venta TSLA</div>
                    </div>
                    <div class="carousel-slide">
                        <img src="/img/alerts/ejemplo-alerta-4.jpg" alt="Ejemplo de alerta 4" class="carousel-image">
                        <div class="carousel-caption">Análisis técnico semanal</div>
                    </div>
                </div>
                <button class="carousel-button prev"><i class="fas fa-chevron-left"></i></button>
                <button class="carousel-button next"><i class="fas fa-chevron-right"></i></button>
                <div class="carousel-dots"></div>
            </div>
        </div>
    </section>

    <!-- Detalles de la Alerta -->
    <section class="alert-details">
        <div class="container">
            <div class="alert-content">
                <div class="features-list" data-animate="fade-right">
                    <h2>Características Incluidas</h2>
                    <ul>
                        <li>Señales 24/7 en tiempo real</li>
                        <li>Setup completo de entrada</li>
                        <li>Stop Loss y Take Profit</li>
                        <li>Análisis de mercado diario</li>
                        <li>Acceso a canal privado de Telegram</li>
                        <li>Informes detallados post-mercado</li>
                        <li>Alertas de oportunidades especiales</li>
                    </ul>
                </div>
                
                <div class="pricing-card" data-animate="fade-left" data-delay="200">
                    <h3>Precio</h3>
                    <div class="price">$149.99/mes</div>
                    <p class="price-note">Primeros 30 días gratis</p>
                    <% if (locals.user) { %>
                        <button class="cta-button" onclick="initPayment('traderCall', {price: 149.99, title: 'Trader Call - Servicio Premium'})">
                            Contratar Ahora
                        </button>
                    <% } else { %>
                        <a href="/auth/login" class="cta-button">Iniciar Sesión para Contratar</a>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Final -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content" data-animate="fade-up">
                <h2>¿Listo para mejorar tus resultados de trading?</h2>
                <p>Únete a Trader Call hoy y comienza a recibir alertas de trading de alta precisión</p>
                <% if (locals.user) { %>
                    <button class="cta-button-large" onclick="initPayment('traderCall', {price: 149.99, title: 'Trader Call - Servicio Premium'})">
                        Comenzar Ahora - Primeros 30 días GRATIS
                    </button>
                <% } else { %>
                    <a href="/auth/login" class="cta-button-large">Iniciar Sesión para Contratar</a>
                <% } %>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script src="/js/navbar.js"></script>
    <script src="/js/animations.js"></script>
    <script src="/js/payment.js"></script>
    <script>
        // Script para el slider de testimonios
        document.addEventListener('DOMContentLoaded', function() {
            // Testimonios slider
            const testimonials = document.querySelectorAll('.testimonial-card');
            const prevBtn = document.querySelector('.prev-btn');
            const nextBtn = document.querySelector('.next-btn');
            let currentIndex = 0;

            function showTestimonial(index) {
                testimonials.forEach((testimonial, i) => {
                    testimonial.style.display = i === index ? 'block' : 'none';
                });
            }

            // Mostrar el primer testimonio al cargar
            showTestimonial(currentIndex);

            // Botones de navegación
            prevBtn.addEventListener('click', () => {
                currentIndex = (currentIndex - 1 + testimonials.length) % testimonials.length;
                showTestimonial(currentIndex);
            });

            nextBtn.addEventListener('click', () => {
                currentIndex = (currentIndex + 1) % testimonials.length;
                showTestimonial(currentIndex);
            });

            // Auto-rotación cada 5 segundos
            setInterval(() => {
                currentIndex = (currentIndex + 1) % testimonials.length;
                showTestimonial(currentIndex);
            }, 5000);

            // Carrusel de imágenes con informes y alertas
            const track = document.querySelector('.carousel-track');
            const slides = document.querySelectorAll('.carousel-slide');
            const nextButton = document.querySelector('.carousel-button.next');
            const prevButton = document.querySelector('.carousel-button.prev');
            const dotsContainer = document.querySelector('.carousel-dots');
            
            if (!track || !slides.length || !nextButton || !prevButton || !dotsContainer) return;
            
            const slideWidth = slides[0].getBoundingClientRect().width;
            let currentSlide = 0;
            
            // Configurar slides iniciales
            slides.forEach((slide, index) => {
                slide.style.left = slideWidth * index + 'px';
                
                // Crear dots para navegación
                const dot = document.createElement('button');
                dot.classList.add('carousel-dot');
                if (index === 0) dot.classList.add('active');
                dot.addEventListener('click', () => {
                    goToSlide(index);
                });
                dotsContainer.appendChild(dot);
            });
            
            // Función para ir a un slide específico
            function goToSlide(index) {
                if (index < 0) index = slides.length - 1;
                if (index >= slides.length) index = 0;
                
                track.style.transform = `translateX(-${slideWidth * index}px)`;
                currentSlide = index;
                
                // Actualizar dots activos
                document.querySelectorAll('.carousel-dot').forEach((dot, i) => {
                    dot.classList.toggle('active', i === currentSlide);
                });
            }
            
            // Event listeners para botones
            nextButton.addEventListener('click', () => {
                goToSlide(currentSlide + 1);
            });
            
            prevButton.addEventListener('click', () => {
                goToSlide(currentSlide - 1);
            });
            
            // Auto-rotación cada 4 segundos
            setInterval(() => {
                goToSlide(currentSlide + 1);
            }, 4000);
        });
    </script>
</body>
</html> 