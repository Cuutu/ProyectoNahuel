<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - CryptoTrading</title>
    <link rel="stylesheet" href="/css/landing.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="dashboard-container">
        <div class="container">
            <h1 class="dashboard-title">Mi Perfil</h1>
            
            <div class="dashboard-content">
                <div class="dashboard-grid">
                    <!-- Información Personal -->
                    <div class="info-card">
                        <h2>
                            Información Personal
                            <button class="edit-button">
                                <i class="fas fa-pencil-alt"></i>
                                Editar
                            </button>
                        </h2>
                        
                        <div class="info-grid">
                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Nombre</div>
                                    <div class="info-value"><%= user.nombre || 'No especificado' %></div>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Email</div>
                                    <div class="info-value"><%= user.email %></div>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-phone"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Teléfono</div>
                                    <div class="info-value"><%= user.telefono || 'No especificado' %></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Membresía -->
                    <div class="membership-card">
                        <div class="membership-header">
                            <h2 class="membership-title">Mi Membresía</h2>
                            <span class="membership-status active">
                                <i class="fas fa-check-circle"></i>
                                Activa
                            </span>
                        </div>

                        <div class="membership-details">
                            <div class="membership-item">
                                <div class="membership-label">Plan Actual</div>
                                <div class="membership-value"><%= user.plan || 'Free' %></div>
                            </div>

                            <div class="membership-item">
                                <div class="membership-label">Estado</div>
                                <div class="membership-value"><%= user.estado %></div>
                            </div>

                            <div class="membership-item">
                                <div class="membership-label">Vence</div>
                                <div class="membership-value"><%= user.vencimiento || 'N/A' %></div>
                            </div>
                        </div>
                    </div>

                    <!-- Actividad Reciente -->
                    <div class="profile-card">
                        <h2>Actividad Reciente</h2>
                        <div class="activity-list">
                            <!-- Aquí irían las últimas actividades del usuario -->
                            <div class="activity-item">
                                <i class="fas fa-book-reader"></i>
                                <div class="activity-details">
                                    <p>Último acceso al curso</p>
                                    <small>Hace 2 días</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Próximas Mentorías -->
                    <div class="profile-card">
                        <h2>Próximas Mentorías</h2>
                        <div class="mentoring-list">
                            <!-- Aquí irían las próximas mentorías programadas -->
                        </div>
                        <a href="/dashboard/smart-money/solicitar-mentoria" class="btn-primary">
                            Solicitar Mentoría
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/navbar.js"></script>
</body>
</html> 