<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - CryptoTrading</title>
    <link rel="stylesheet" href="/css/landing.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="dashboard-container">
        <div class="container">
            <h1>Bienvenido, <%= user.nombre %></h1>
            
            <div class="dashboard-content">
                <div class="dashboard-grid">
                    <!-- Información Personal -->
                    <div class="profile-card">
                        <div class="card-header">
                            <h2>Información Personal</h2>
                            <button class="btn-edit" onclick="toggleEditMode()">
                                <i class="fas fa-pencil-alt"></i> Editar
                            </button>
                        </div>
                        
                        <!-- Modo Vista -->
                        <div id="viewMode" class="profile-info">
                            <div class="info-item">
                                <i class="fas fa-user"></i>
                                <div>
                                    <label>Nombre:</label>
                                    <p id="nombreView"><%= user.nombre || 'No especificado' %></p>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-envelope"></i>
                                <div>
                                    <label>Email:</label>
                                    <p><%= user.email %></p>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-phone"></i>
                                <div>
                                    <label>Teléfono:</label>
                                    <p id="telefonoView"><%= user.telefono || 'No especificado' %></p>
                                </div>
                            </div>
                        </div>

                        <!-- Modo Edición -->
                        <form id="editMode" class="profile-form" style="display: none;" onsubmit="updateProfile(event)">
                            <div class="form-group">
                                <label for="nombre">Nombre:</label>
                                <input type="text" id="nombre" name="nombre" value="<%= user.nombre %>">
                            </div>
                            <div class="form-group">
                                <label for="telefono">Teléfono:</label>
                                <input type="tel" id="telefono" name="telefono" value="<%= user.telefono %>">
                            </div>
                            <div class="form-buttons">
                                <button type="submit" class="btn-save">Guardar</button>
                                <button type="button" class="btn-cancel" onclick="toggleEditMode()">Cancelar</button>
                            </div>
                        </form>
                    </div>

                    <!-- Membresía Mejorada -->
                    <div class="profile-card membership-card">
                        <h2>Mi Membresía</h2>
                        <div class="membership-details">
                            <div class="plan-info">
                                <div class="current-plan">
                                    <span class="plan-badge <%= user.plan ? 'premium' : 'free' %>">
                                        <%= user.plan || 'Free' %>
                                    </span>
                                    <span class="status-badge <%= user.estado === 'Activa' ? 'active' : 'inactive' %>">
                                        <%= user.estado %>
                                    </span>
                                </div>
                                <div class="plan-expiry">
                                    <i class="fas fa-clock"></i>
                                    <span>Vence: <%= user.vencimiento || 'No aplica' %></span>
                                </div>
                            </div>
                            
                            <div class="plan-features">
                                <h3>Beneficios Incluidos:</h3>
                                <ul>
                                    <li><i class="fas fa-check"></i> Acceso a Trader Call</li>
                                    <li><i class="fas fa-check"></i> Alertas en tiempo real</li>
                                    <li><i class="fas fa-check"></i> Soporte prioritario</li>
                                </ul>
                            </div>

                            <div class="plan-actions">
                                <% if (!user.plan || user.plan === 'Free') { %>
                                    <a href="/planes" class="btn-upgrade">Actualizar a Premium</a>
                                <% } else { %>
                                    <button class="btn-renew">Renovar Membresía</button>
                                <% } %>
                                <a href="/planes/beneficios" class="btn-benefits">Ver todos los beneficios</a>
                            </div>
                        </div>
                    </div>

                    <!-- Actividad Reciente -->
                    <div class="profile-card">
                        <h2>Actividad Reciente</h2>
                        <div class="activity-list">
                            <!-- Aquí irían las últimas actividades del usuario -->
                            <div class="activity-item">
                                <i class="fas fa-book-reader"></i>
                                <div class="activity-details">
                                    <p>Último acceso al curso</p>
                                    <small>Hace 2 días</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Próximas Mentorías -->
                    <div class="profile-card">
                        <h2>Próximas Mentorías</h2>
                        <div class="mentoring-list">
                            <!-- Aquí irían las próximas mentorías programadas -->
                        </div>
                        <a href="/dashboard/smart-money/solicitar-mentoria" class="btn-primary">
                            Solicitar Mentoría
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/navbar.js"></script>
</body>
</html> 