<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - CryptoTrading</title>
    <link rel="stylesheet" href="/css/landing.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="dashboard-container">
        <div class="container">
            <h1 class="dashboard-title">Mi Perfil</h1>
            
            <div class="dashboard-content">
                <div class="dashboard-grid">
                    <!-- Información Personal -->
                    <div class="info-card">
                        <h2>
                            Información Personal
                            <button class="edit-button">
                                <i class="fas fa-pencil-alt"></i>
                                Editar
                            </button>
                        </h2>
                        
                        <div class="info-grid">
                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Nombre</div>
                                    <div class="info-value"><%= user.nombre || 'No especificado' %></div>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Email</div>
                                    <div class="info-value"><%= user.email %></div>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-phone"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Teléfono</div>
                                    <div class="info-value"><%= user.telefono || 'No especificado' %></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Membresía -->
                    <div class="membership-card">
                        <div class="membership-header">
                            <h2 class="membership-title">Mi Membresía</h2>
                        </div>

                        <div class="membership-details">
                            <% if (user.membresias) { %>
                                <!-- Alertas -->
                                <div class="membership-item">
                                    <div class="membership-label">Alertas</div>
                                    <div class="membership-value">
                                        <span class="membership-badge <%= user.membresias.alertas !== 'free' ? 'premium' : 'free' %>">
                                            <%= user.membresias.alertas.toUpperCase() %>
                                        </span>
                                        <% if (user.membresias.vencimientoAlertas) { %>
                                            <small>Vence: <%= new Date(user.membresias.vencimientoAlertas).toLocaleDateString() %></small>
                                        <% } %>
                                    </div>
                                </div>

                                <!-- Entrenamientos -->
                                <div class="membership-item">
                                    <div class="membership-label">Entrenamientos</div>
                                    <div class="membership-value">
                                        <span class="membership-badge <%= user.membresias.entrenamientos !== 'free' ? 'premium' : 'free' %>">
                                            <%= user.membresias.entrenamientos.toUpperCase() %>
                                        </span>
                                        <% if (user.membresias.vencimientoEntrenamientos) { %>
                                            <small>Vence: <%= new Date(user.membresias.vencimientoEntrenamientos).toLocaleDateString() %></small>
                                        <% } %>
                                    </div>
                                </div>

                                <!-- Asesoramiento -->
                                <div class="membership-item">
                                    <div class="membership-label">Asesoramiento</div>
                                    <div class="membership-value">
                                        <% if (user.membresias.asesoramiento) { %>
                                            <span class="membership-badge premium">ACTIVO</span>
                                            <% if (user.membresias.vencimientoAsesoramiento) { %>
                                                <small>Vence: <%= new Date(user.membresias.vencimientoAsesoramiento).toLocaleDateString() %></small>
                                            <% } %>
                                        <% } else { %>
                                            <span class="membership-badge free">NO ACTIVO</span>
                                        <% } %>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="no-membership">
                                    <p>No tienes membresías activas</p>
                                    <a href="/alertas" class="btn-upgrade">Ver Planes Disponibles</a>
                                </div>
                            <% } %>
                        </div>

                        <% if (!user.membresias || 
                              (user.membresias.alertas === 'free' && 
                               user.membresias.entrenamientos === 'free' && 
                               !user.membresias.asesoramiento)) { %>
                            <div class="membership-upgrade">
                                <p>¡Mejora tu experiencia con nuestros planes premium!</p>
                                <a href="/alertas" class="btn-upgrade">
                                    <i class="fas fa-crown"></i>
                                    Explorar Planes
                                </a>
                            </div>
                        <% } %>
                    </div>

                    <!-- Actividad Reciente -->
                    <div class="profile-card">
                        <h2>Actividad Reciente</h2>
                        <div class="activity-list">
                            <!-- Aquí irían las últimas actividades del usuario -->
                            <div class="activity-item">
                                <i class="fas fa-book-reader"></i>
                                <div class="activity-details">
                                    <p>Último acceso al curso</p>
                                    <small>Hace 2 días</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Próximas Mentorías -->
                    <div class="profile-card">
                        <h2>Próximas Mentorías</h2>
                        <div class="mentoring-list">
                            <!-- Aquí irían las próximas mentorías programadas -->
                        </div>
                        <a href="/dashboard/smart-money/solicitar-mentoria" class="btn-primary">
                            Solicitar Mentoría
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/navbar.js"></script>
</body>
</html> 