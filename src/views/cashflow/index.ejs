<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<div class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <!-- Encabezado de la página -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Dashboard Cashflow</h1>
            <p class="text-gray-600 mt-2">Monitoreo y análisis de flujos de capital en el mercado</p>
        </div>

        <!-- Tarjetas de resumen -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            <!-- Tarjeta 1 -->
            <div class="bg-white rounded-lg shadow-md p-6 border-t-4 border-blue-500 hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-700">Mercado Alcista</h2>
                    <span class="p-2 bg-green-100 text-green-700 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                    </span>
                </div>
                <p class="text-3xl font-bold text-gray-800 mt-4">65%</p>
                <p class="text-sm text-gray-500 mt-2">Flujo de capital entrante</p>
            </div>

            <!-- Tarjeta 2 -->
            <div class="bg-white rounded-lg shadow-md p-6 border-t-4 border-red-500 hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-700">Mercado Bajista</h2>
                    <span class="p-2 bg-red-100 text-red-700 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0v-8m0 8l-8-8-4 4-6-6" />
                        </svg>
                    </span>
                </div>
                <p class="text-3xl font-bold text-gray-800 mt-4">35%</p>
                <p class="text-sm text-gray-500 mt-2">Flujo de capital saliente</p>
            </div>

            <!-- Tarjeta 3 -->
            <div class="bg-white rounded-lg shadow-md p-6 border-t-4 border-purple-500 hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-700">Balance Neto</h2>
                    <span class="p-2 bg-purple-100 text-purple-700 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </span>
                </div>
                <p class="text-3xl font-bold text-gray-800 mt-4">+30%</p>
                <p class="text-sm text-gray-500 mt-2">Tendencia mensual</p>
            </div>
        </div>

        <!-- Gráfico principal -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-xl font-semibold text-gray-700 mb-4">Análisis de Flujo de Capital</h2>
            <div class="aspect-w-16 aspect-h-9 bg-gray-50 rounded border border-gray-200">
                <!-- Aquí irá el gráfico (Canvas para Chart.js) -->
                <canvas id="cashflowChart" class="w-full h-64"></canvas>
            </div>
        </div>

        <!-- Sección de tablas/datos -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <!-- Tabla de principales entradas -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Principales Entradas de Capital</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Activo</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Volumen</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cambio</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">BTC/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$1.2B</td>
                                <td class="px-6 py-4 whitespace-nowrap text-green-600">+8.3%</td>
                            </tr>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">ETH/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$780M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-green-600">+5.7%</td>
                            </tr>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">SOL/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$325M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-green-600">+12.1%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Tabla de principales salidas -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Principales Salidas de Capital</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Activo</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Volumen</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cambio</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">XRP/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$450M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-red-600">-4.2%</td>
                            </tr>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">DOGE/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$215M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-red-600">-2.8%</td>
                            </tr>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">ADA/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$180M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-red-600">-3.5%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sección inferior con información adicional -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold text-gray-700 mb-4">Indicadores de Cashflow</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Indicador 1 -->
                <div class="border border-gray-200 rounded-lg p-4">
                    <h3 class="font-medium text-gray-700">Índice de Liquidez</h3>
                    <div class="flex items-center mt-2">
                        <div class="w-full bg-gray-200 rounded-full h-2.5">
                            <div class="bg-blue-600 h-2.5 rounded-full" style="width: 70%"></div>
                        </div>
                        <span class="text-sm font-medium text-gray-600 ml-2">70%</span>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">Condiciones de alta liquidez en el mercado</p>
                </div>
                
                <!-- Indicador 2 -->
                <div class="border border-gray-200 rounded-lg p-4">
                    <h3 class="font-medium text-gray-700">Presión Compradora</h3>
                    <div class="flex items-center mt-2">
                        <div class="w-full bg-gray-200 rounded-full h-2.5">
                            <div class="bg-green-500 h-2.5 rounded-full" style="width: 65%"></div>
                        </div>
                        <span class="text-sm font-medium text-gray-600 ml-2">65%</span>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">Presión compradora moderada-alta</p>
                </div>
                
                <!-- Indicador 3 -->
                <div class="border border-gray-200 rounded-lg p-4">
                    <h3 class="font-medium text-gray-700">Presión Vendedora</h3>
                    <div class="flex items-center mt-2">
                        <div class="w-full bg-gray-200 rounded-full h-2.5">
                            <div class="bg-red-500 h-2.5 rounded-full" style="width: 35%"></div>
                        </div>
                        <span class="text-sm font-medium text-gray-600 ml-2">35%</span>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">Presión vendedora relativamente baja</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script para el gráfico -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('cashflowChart').getContext('2d');
        
        // Datos de ejemplo para el gráfico
        const cashflowChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct'],
                datasets: [
                    {
                        label: 'Entrada de Capital',
                        data: [65, 78, 52, 60, 72, 68, 82, 75, 80, 85],
                        borderColor: 'rgba(59, 130, 246, 0.8)',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        borderWidth: 2,
                        tension: 0.3,
                        fill: true
                    },
                    {
                        label: 'Salida de Capital',
                        data: [40, 45, 50, 35, 42, 38, 45, 40, 30, 38],
                        borderColor: 'rgba(239, 68, 68, 0.8)',
                        backgroundColor: 'rgba(239, 68, 68, 0.1)',
                        borderWidth: 2,
                        tension: 0.3,
                        fill: true
                    },
                    {
                        label: 'Balance Neto',
                        data: [25, 33, 2, 25, 30, 30, 37, 35, 50, 47],
                        borderColor: 'rgba(139, 92, 246, 0.8)',
                        backgroundColor: 'rgba(139, 92, 246, 0.1)',
                        borderWidth: 2,
                        tension: 0.3,
                        borderDash: [5, 5],
                        fill: false
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            drawBorder: false
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    });
</script>

