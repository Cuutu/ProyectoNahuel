<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<link rel="stylesheet" href="/css/dashboard-components.css">
<link rel="stylesheet" href="/css/charts.css">

<div class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <!-- Encabezado de la página -->
        <div class="border-b border-gray-200 pb-4 mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Dashboard Cashflow</h1>
            <p class="text-gray-600 mt-2">Monitoreo y análisis de flujos de capital en el mercado</p>
        </div>

        <!-- Panel principal -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
            <!-- Panel izquierdo - Stats rápidas -->
            <div class="lg:col-span-1">
                <!-- Tarjeta 1: Mercado Alcista -->
                <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500 mb-6 hover:shadow-lg transition-shadow">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-semibold text-gray-700">Mercado Alcista</h2>
                        <span class="p-2 bg-green-100 text-green-700 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                            </svg>
                        </span>
                    </div>
                    <p class="text-3xl font-bold text-gray-800 mt-4">65%</p>
                    <p class="text-sm text-gray-500 mt-2">Flujo de capital entrante</p>
                </div>

                <!-- Tarjeta 2: Mercado Bajista -->
                <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-red-500 mb-6 hover:shadow-lg transition-shadow">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-semibold text-gray-700">Mercado Bajista</h2>
                        <span class="p-2 bg-red-100 text-red-700 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0v-8m0 8l-8-8-4 4-6-6" />
                            </svg>
                        </span>
                    </div>
                    <p class="text-3xl font-bold text-gray-800 mt-4">35%</p>
                    <p class="text-sm text-gray-500 mt-2">Flujo de capital saliente</p>
                </div>

                <!-- Tarjeta 3: Balance Neto -->
                <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500 mb-6 hover:shadow-lg transition-shadow">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-semibold text-gray-700">Balance Neto</h2>
                        <span class="p-2 bg-blue-100 text-blue-700 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                        </span>
                    </div>
                    <p class="text-3xl font-bold text-gray-800 mt-4">+30%</p>
                    <p class="text-sm text-gray-500 mt-2">Tendencia mensual</p>
                </div>
            </div>

            <!-- Panel central y derecho - Gráfico principal -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                    <h2 class="text-xl font-semibold text-gray-700 mb-4">Análisis de Flujo de Capital</h2>
                    
                    <!-- Contenido temporal -->
                    <div class="bg-gray-50 rounded-lg border border-gray-200 p-6">
                        <div class="text-center py-8">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                            <h3 class="text-lg font-medium text-gray-700 mb-2">Próximamente</h3>
                            <p class="text-gray-500">La funcionalidad completa de este dashboard estará disponible próximamente.</p>
                        </div>

                        <div class="mt-6">
                            <h4 class="font-medium text-gray-700 mb-2">Esta página mostrará:</h4>
                            <ul class="list-disc pl-5 space-y-1 text-gray-600">
                                <li>Indicadores de entrada y salida de capital</li>
                                <li>Gráficos de flujo de fondos</li>
                                <li>Estadísticas de liquidez del mercado</li>
                                <li>Principales activos con movimientos de capital</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sección de tablas/datos -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <!-- Tabla de principales entradas -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Principales Entradas de Capital</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Activo</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Volumen</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cambio</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">BTC/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$1.2B</td>
                                <td class="px-6 py-4 whitespace-nowrap text-green-600">+8.3%</td>
                            </tr>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">ETH/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$780M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-green-600">+5.7%</td>
                            </tr>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">SOL/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$325M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-green-600">+12.1%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Tabla de principales salidas -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Principales Salidas de Capital</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Activo</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Volumen</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cambio</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">XRP/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$450M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-red-600">-4.2%</td>
                            </tr>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">DOGE/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$215M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-red-600">-2.8%</td>
                            </tr>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">ADA/USD</td>
                                <td class="px-6 py-4 whitespace-nowrap">$180M</td>
                                <td class="px-6 py-4 whitespace-nowrap text-red-600">-3.5%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sección de botones o acciones -->
        <div class="flex flex-wrap gap-4 justify-center">
            <a href="#" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Ver detalles
            </a>
            
            <a href="#" class="inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
                Descargar informe
            </a>
        </div>
    </div>
</div>

