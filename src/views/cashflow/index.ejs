<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<link rel="stylesheet" href="/css/dashboard-components.css">
<link rel="stylesheet" href="/css/charts.css">

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="dashboard-title">Dashboard Cashflow</h1>
        <p class="dashboard-subtitle">Monitoreo y análisis de flujos de capital en el mercado</p>
    </div>

    <div class="dashboard-content">
        <!-- Panel de Mercado Alcista -->
        <div class="trading-panel bullish-panel">
            <div class="panel-header">
                <h2 class="panel-title">Mercado Alcista</h2>
                <span class="panel-icon bullish-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                </span>
            </div>
            <p class="panel-value">65%</p>
            <p class="panel-description">Flujo de capital entrante</p>
        </div>

        <!-- Panel de Mercado Bajista -->
        <div class="trading-panel bearish-panel">
            <div class="panel-header">
                <h2 class="panel-title">Mercado Bajista</h2>
                <span class="panel-icon bearish-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0v-8m0 8l-8-8-4 4-6-6" />
                    </svg>
                </span>
            </div>
            <p class="panel-value">35%</p>
            <p class="panel-description">Flujo de capital saliente</p>
        </div>

        <!-- Panel de Balance Neto -->
        <div class="trading-panel neutral-panel">
            <div class="panel-header">
                <h2 class="panel-title">Balance Neto</h2>
                <span class="panel-icon neutral-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                </span>
            </div>
            <p class="panel-value">+30%</p>
            <p class="panel-description">Tendencia mensual</p>
        </div>

        <!-- Gráfico principal -->
        <div class="chart-container">
            <h2 class="chart-title">Análisis de Flujo de Capital</h2>
            <div class="chart-placeholder">
                <div class="placeholder-content">
                    <svg xmlns="http://www.w3.org/2000/svg" class="placeholder-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    <h3 class="placeholder-title">Próximamente</h3>
                    <p class="placeholder-text">La funcionalidad completa de este dashboard estará disponible próximamente.</p>
                </div>

                <div class="placeholder-details">
                    <h4 class="details-title">Esta página mostrará:</h4>
                    <ul class="details-list">
                        <li>Indicadores de entrada y salida de capital</li>
                        <li>Gráficos de flujo de fondos</li>
                        <li>Estadísticas de liquidez del mercado</li>
                        <li>Principales activos con movimientos de capital</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Tablas de datos -->
        <div class="data-tables-container">
            <!-- Tabla de principales entradas -->
            <div class="data-table-section">
                <h2 class="table-title">Principales Entradas de Capital</h2>
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Activo</th>
                                <th>Volumen</th>
                                <th>Cambio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>BTC/USD</td>
                                <td>$1.2B</td>
                                <td class="positive-change">+8.3%</td>
                            </tr>
                            <tr>
                                <td>ETH/USD</td>
                                <td>$780M</td>
                                <td class="positive-change">+5.7%</td>
                            </tr>
                            <tr>
                                <td>SOL/USD</td>
                                <td>$325M</td>
                                <td class="positive-change">+12.1%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Tabla de principales salidas -->
            <div class="data-table-section">
                <h2 class="table-title">Principales Salidas de Capital</h2>
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Activo</th>
                                <th>Volumen</th>
                                <th>Cambio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>XRP/USD</td>
                                <td>$450M</td>
                                <td class="negative-change">-4.2%</td>
                            </tr>
                            <tr>
                                <td>DOGE/USD</td>
                                <td>$215M</td>
                                <td class="negative-change">-2.8%</td>
                            </tr>
                            <tr>
                                <td>ADA/USD</td>
                                <td>$180M</td>
                                <td class="negative-change">-3.5%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Botones de acción -->
        <div class="action-buttons">
            <a href="#" class="primary-button">
                <svg xmlns="http://www.w3.org/2000/svg" class="button-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Ver detalles
            </a>
            
            <a href="#" class="secondary-button">
                <svg xmlns="http://www.w3.org/2000/svg" class="button-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
                Descargar informe
            </a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 