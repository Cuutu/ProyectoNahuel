<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<div class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Nuevo Registro de Cashflow</h1>
            <p class="text-gray-600 mt-2">Ingresa los datos del nuevo registro de flujo de capital</p>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6">
            <form action="/cashflow/nuevo" method="POST" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Activo -->
                    <div>
                        <label for="activo" class="block text-sm font-medium text-gray-700 mb-1">Activo</label>
                        <input type="text" id="activo" name="activo" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    
                    <!-- Mercado -->
                    <div>
                        <label for="mercado" class="block text-sm font-medium text-gray-700 mb-1">Mercado</label>
                        <select id="mercado" name="mercado" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                            <option value="crypto">Criptomonedas</option>
                            <option value="forex">Forex</option>
                            <option value="stocks">Acciones</option>
                            <option value="commodities">Materias Primas</option>
                        </select>
                    </div>
                    
                    <!-- Tipo de Flujo -->
                    <div>
                        <label for="tipoFlujo" class="block text-sm font-medium text-gray-700 mb-1">Tipo de Flujo</label>
                        <select id="tipoFlujo" name="tipoFlujo" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                            <option value="entrada">Entrada de Capital</option>
                            <option value="salida">Salida de Capital</option>
                        </select>
                    </div>
                    
                    <!-- Volumen -->
                    <div>
                        <label for="volumen" class="block text-sm font-medium text-gray-700 mb-1">Volumen (USD)</label>
                        <input type="number" id="volumen" name="volumen" step="0.01" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    
                    <!-- Cambio Porcentual -->
                    <div>
                        <label for="cambio" class="block text-sm font-medium text-gray-700 mb-1">Cambio (%)</label>
                        <input type="number" id="cambio" name="cambio" step="0.01" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    
                    <!-- Índice de Liquidez -->
                    <div>
                        <label for="indiceLiquidez" class="block text-sm font-medium text-gray-700 mb-1">Índice de Liquidez</label>
                        <input type="number" id="indiceLiquidez" name="indiceLiquidez" step="0.01" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    
                    <!-- Presión Compradora -->
                    <div>
                        <label for="presionCompradora" class="block text-sm font-medium text-gray-700 mb-1">Presión Compradora</label>
                        <input type="number" id="presionCompradora" name="presionCompradora" step="0.01" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    
                    <!-- Presión Vendedora -->
                    <div>
                        <label for="presionVendedora" class="block text-sm font-medium text-gray-700 mb-1">Presión Vendedora</label>
                        <input type="number" id="presionVendedora" name="presionVendedora" step="0.01" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    
                    <!-- Notas -->
                    <div>
                        <label for="notas" class="block text-sm font-medium text-gray-700 mb-1">Notas</label>
                        <textarea id="notas" name="notas" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"></textarea>
                    </div>
                </div>
                <button type="submit" class="w-full px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Guardar</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 